<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            tools:layout_editor_absoluteY="2dp"
            app:title="Stock Inventory Management"
            />




        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Product"
            android:textColor="#fff"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_baseline_add_business_24"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/button_addproduct"
            android:textAlignment="textStart"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:background="@drawable/custum_button"
            android:gravity="start" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product List"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/Button_viewproduct"
            android:background="@drawable/custum_button"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:drawableLeft="@drawable/ic_baseline_production_quantity_limits_24"
            android:gravity="start" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/custum_button"
            android:text="Product In"
            android:id="@+id/pin"
            tools:ignore="MissingConstraints"
            android:padding="15dp"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:drawableLeft="@drawable/ic_baseline_arrow_drop_up_24"
            android:gravity="start" />



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/custum_button"
            android:text="Product out"
            android:id="@+id/pout"
            tools:ignore="MissingConstraints"
            android:padding="15dp"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_baseline_arrow_drop_down_24"
            android:textAlignment="textStart"
            android:gravity="start" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trasactions"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_baseline_money_24"
            android:textAlignment="textStart"
            android:padding="15dp"
            android:textColor="#fff"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/view_transproduct"
            android:layout_margin="10dp"
            android:background="@drawable/custum_button"
            android:gravity="start" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
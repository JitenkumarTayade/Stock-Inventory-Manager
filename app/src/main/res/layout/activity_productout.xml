<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addproduct">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:navigationIcon="@drawable/backline"
            app:title="Product Out Stock" />


        <TextView
            android:id="@+id/show_date2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:hint="Date"
            android:background="#f8f8ff"
            android:textColor="#FF000000"
            android:textSize="18sp"
            android:gravity="start"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date_text2"
            android:layout_marginLeft="10dp"
            android:background="#f8f8ff"
            />

        <TextView
            android:id="@+id/productn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:hint="Product"
            android:background="#f8f8ff"
            android:textColor="#FF000000"
            android:textSize="18sp"
            android:gravity="start"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pinput"
            android:layout_marginLeft="10dp"
            android:background="#f8f8ff"
            />

        <TextView
            android:id="@+id/transtype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:hint="Transaction Type"
            android:background="#f8f8ff"
            android:textColor="#FF000000"
            android:textSize="18sp"
            android:gravity="start"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/transtypeinput"
            android:layout_marginLeft="10dp"
            android:background="#FF0000"
            android:text="Out"
            android:textAlignment="center"
            android:gravity="center_horizontal"

            />


        <TextView
            android:id="@+id/currentstock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:hint="Current Stock"
            android:background="#f8f8ff"
            android:textColor="#FF000000"
            android:textSize="18sp"
            android:gravity="start"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/csinput"
            android:layout_marginLeft="10dp"
            android:background="#f8f8ff"
            />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:hint="Quantity"
            android:background="#f8f8ff"
            android:textColor="#FF000000"
            android:textSize="18sp"
            android:gravity="start"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/qinput"
            android:layout_marginLeft="10dp"
            android:background="#f8f8ff"
            />



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:background="#000"
            android:textColor="#fff"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/save_product"
            android:layout_margin="10dp"

            />


    </LinearLayout>



</RelativeLayout>